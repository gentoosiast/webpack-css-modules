{
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "noUncheckedIndexedAccess": true,
    "allowSyntheticDefaultImports": true,
    "module": "ES2022",
    "moduleResolution": "bundler",
    "target": "es6",
    "plugins": [{ "name": "typescript-plugin-css-modules" }],
    "paths": {
      "@components/*": ["./src/components/*"]
    }
  },
  "files": ["src/index.ts", "src/modules.d.ts"]
}
